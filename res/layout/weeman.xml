<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weeman_description"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/weeman_desc" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weeman_presets"
            android:layout_weight="2.58" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weeman_cloneurl"
        android:padding="4dp"
        android:id="@+id/textView17" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="@string/weeman_http"
                android:padding="4dp"
                android:id="@+id/textView18" />

            <EditText
                android:id="@+id/weeman_urlclone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxWidth="15dp"
                android:maxLines="1"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weeman_actionurl"
            android:padding="4dp"
            android:id="@+id/textView19" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="@string/weeman_http"
                android:padding="4dp"
                android:id="@+id/textView20" />

            <EditText
                android:id="@+id/weeman_actionurl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxWidth="15dp"
                android:maxLines="1"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="183dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weeman_port"
                android:padding="4dp"
                android:id="@+id/textView22" />

            <EditText
                android:id="@+id/weeman_port"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:numeric="integer"
                android:maxWidth="15dp"
                android:maxLines="1"
                android:maxLength="5" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Weeman"
                android:id="@+id/weemanStart"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Weeman"
                android:id="@+id/weemanStop"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>